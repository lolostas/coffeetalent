<div class="col-xs-12 col-sm-4">
    <div class="card">
      <div class="card-header">
        <h3><%= @talent.talent_proposed.capitalize %></h3>
        <p><%= @talent.category.name.capitalize %> </p>
      </div>
      <div class="card-image" style="background-image:
      url('https://lorempixel.com/300/300?random}')">
      </div>
      <div class="card-description">
        <p><%= icon("user-o") %> <%= @talent.user.first_name %></p>
        <p><%= icon("map-marker") %> <%= @talent.user.address %></p>
      </div>
      <a href="" class="btn btn-primary see_more">See more</a>
    </div>
</div>

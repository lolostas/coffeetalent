<div class="container">
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <h3 class="center">All ongoing conversations with talents</h3>

      <div class="message">
        <% @conversations.each do |conversation| %>
          <div class="sender-avatar">
            <%= cl_image_tag image_path_for(destinator_for(conversation)), width: 75, heigth: 75, crop: :fill, class: "avatar" %>
            <div class="sender-conversation">
              <p><%= destinator_for(conversation).name %></p>
              <p><%= link_to conversation.subject, conversation_path(conversation) %></p>
            </div>
            <div class="unread-messages">
              <span class="badge"> <%= conversation.receipts.inbox.is_unread.count %></span>
            </div>
          </div>
        <% end %>
      </div>
      <BR>

      <%= link_to "Find another talent ! ", talents_path, class: 'btn btn-primary btn-lg' %>

    </div>
  </div>
</div>

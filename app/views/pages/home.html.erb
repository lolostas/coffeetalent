<body>
  <div id="banner">
    <div class="banner-content">
      <div class=col-xs-12>
        <h1>Meet a Talent.</h1>
        <h2>Passionate people sharing</h2>
        <h2>their experience around a drink.</h2>
        <br>
        <form action="<%= talents_path %>" class="flex-form navbar-left" role="search">
          <input type="text" name="query" class="form-control" placeholder="Search">
          <select type="text" name="category_id" class="form-control" placeholder="Select a category">
            <option value="">All</option>
            <% @categories.each do |category| %>
              <option value="<%= category.id %>"><%= category.name %></option>
            <% end %>
          </select>
          <button type="submit" class="btn btn-primary btn-lg">Let's go!</button>
        </form>
      </div>
    </div>
  </div>

